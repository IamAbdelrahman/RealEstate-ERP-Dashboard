<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Realestate_ERP_Dashboard</title>
    <link rel="stylesheet" href="~/Realestate_ERP_Dashboard.styles.css" asp-append-version="true" />
    @* <link href="C:\Users\Lenovo\Downloads\bootstrap.rtl.min (2).css" rel="stylesheet" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            margin: 0;
            padding: 0;
            padding-right: 270px; /* Space for sidebar in RTL */
        }

        .sidebar {
            width: 270px;
            height: 100vh;
            position: fixed;
            background-color: lightgray;
            right: 0;
            top: 0;
            overflow-y: auto;
            z-index: 1030;
        }

            .sidebar .nav-link {
                color: black;
                padding: 15px;
                display: flex;
                align-items: center;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }

                .sidebar .nav-link.active {
                    background-color: #0b5ed7 !important; /* Bootstrap primary shade */
                    color: white !important;
                }


                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: rgba(255, 255, 255, 0.1);
                    color: #fff;
                }

            .sidebar .bi {
                margin-left: 10px;
            }

        .main-content {
            padding: 20px;
        }
        /* Mobile */
        /*     media (max-width: 768px) {
                            body

                        {
                            padding-right: 0;
                        }

                        .sidebar {
                            right: -220px;
                            transition: right 0.3s ease-in-out;
                        }

                            .sidebar.show {
                                right: 0;
                            }

                        #sidebarToggle {
                            position: fixed;
                            top: 10px;
                            right: 10px;
                            z-index: 1050;
                        } */
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar text-black" id="sidebar">
        <div class="text-center text-black fw-bold py-3 border-bottom">
            <div>Matix ERP</div>
        </div>
        <ul class="nav flex-column text-black">
            <li><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2"></i> الرئيسية</a></li>
            <li><a class="nav-link" asp-controller="Settings" asp-action="Index"><i class="bi bi-gear"></i> الإعدادات</a></li>
            <li><a class="nav-link" asp-controller="Tenants" asp-action="Index"><i class="bi bi-people"></i> المستأجرين</a></li>
            <li><a class="nav-link" asp-controller="Contracts" asp-action="Index"><i class="bi bi-file-earmark-text"></i> عقود الإيجار</a></li>
            <li><a class="nav-link" asp-controller="Payments" asp-action="Index"><i class="bi bi-credit-card"></i> سداد الإيجارات</a></li>
            <li><a class="nav-link" asp-controller="PaymentDetails" asp-action="Index"><i class="bi bi-card-checklist"></i> تفاصيل السداد</a></li>
            <li><a class="nav-link" asp-controller="Invoices" asp-action="Index"><i class="bi bi-receipt"></i> فواتير</a></li>
            <li><a class="nav-link" asp-controller="Case" asp-action="Index"><i class="bi bi-archive"></i> القضايا</a></li>
            <li><a class="nav-link" asp-controller="Buildings" asp-action="Index"><i class="bi bi-building"></i> المجمعات</a></li>
            <li><a class="nav-link" asp-controller="Reports" asp-action="Index"><i class="bi bi-bar-chart"></i> التقارير</a></li>
        </ul>
    </div>

    <!-- Toggle button (Mobile) -->
    <button class="btn btn-primary d-md-none" id="sidebarToggle">
        <i class="bi bi-list"></i>
    </button>

    <!-- Main Content -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted mt-4">
            <div class="container text-center">
                &copy; 2025 - Realestate_ERP_Dashboard - <a asp-controller="Home" asp-action="Privacy">الخصوصية</a>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('sidebarToggle');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('show');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
